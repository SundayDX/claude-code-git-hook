{
  "name": "claude-code-git-hook",
  "version": "1.0.0",
  "description": "Git hook tool for Claude Code - automatic WIP commits and squash-wip command",
  "type": "module",
  "main": "src/cc-git-hook.js",
  "bin": {
    "cc-git-hook": "./src/cc-git-hook.js"
  },
  "scripts": {
    "test": "node test/run-all-tests.js",
    "test:auto-commit": "node test/test-auto-commit.js",
    "test:squash-wip": "node test/test-squash-wip.js",
    "test:all": "node test/run-all-tests.js",
    "version": "node -e \"console.log(require('./package.json').version)\"",
    "generate-version": "node scripts/generate-version.js",
    "prepublishOnly": "npm run generate-version && npm test",
    "postinstall": "echo 'âœ… claude-code-git-hook installed successfully! Run cc-git-hook doctor to verify.'"
  },
  "keywords": [
    "claude-code",
    "git",
    "hook",
    "wip",
    "commit",
    "automation",
    "version-control",
    "claude",
    "ai",
    "devops"
  ],
  "author": {
    "name": "SundayDX",
    "url": "https://github.com/SundayDX"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SundayDX/claude-code-git-hook.git"
  },
  "bugs": {
    "url": "https://github.com/SundayDX/claude-code-git-hook/issues"
  },
  "homepage": "https://github.com/SundayDX/claude-code-git-hook#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.0"
  },
  "files": [
    "src/",
    "examples/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ]
